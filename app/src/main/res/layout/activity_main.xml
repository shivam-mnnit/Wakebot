<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.wakebot.MainActivity">



    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:headerBackground="@android:color/holo_green_light"
        android:numbersSelectorColor="@android:color/holo_green_light"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/startAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="Start Alarm"
        android:textSize="20dp"
        tools:clickable="true"
        android:layout_alignBaseline="@+id/endAlarm"
        android:layout_alignBottom="@+id/endAlarm"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/endAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:text="End Alarm"
        android:textSize="20dp"
        tools:clickable="true"
        android:layout_above="@+id/update_Text"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

    <TextView
        android:id="@+id/update_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did u set alarm?"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />


</RelativeLayout>
